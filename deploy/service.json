[{
  "id": "${DEPLOY_ENV}/${JOB_NAME}",
  "uris": ["/root/docker.tar.gz"],
  "constraints": [["rack_id", "CLUSTER", "$MARATHON_CONSTRAINTS"]],
  "cpus": 0.2,
  "mem": 1048,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "advancedtelematic/ota-device-registry:${DOCKER_TAG}",
      "parameters": [{"key": "log-driver", "value": "syslog"},
                     {"key": "log-opt", "value": "tag=${SERVICE_NAME}"}],
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [{
        "containerPort": 9001,
        "hostPort": 0,
        "protocol": "tcp"
      }]
    }
  },
  "env": {
    "AUTH_PROTOCOL": "none",
    "BIND_HOST": "0.0.0.0",
    "BIND_PORT": "9001",
    "DB_MIGRATE": "true",
    "DB_PASSWORD": "${DB_PASSWORD}",
    "DB_URL": "${DB_URL}",
    "DB_USER": "${DB_USER}",
    "JAVA_OPTS": "-Xmx800m",
    "KAFKA_BOOTSTRAP_SERVERS": "${KAFKA_BOOTSTRAP_SERVERS}",
    "KAFKA_HOST": "${KAFKA_HOST}",
    "KAFKA_TOPIC_SUFFIX": "${KAFKA_TOPIC_SUFFIX}",
    "MESSAGING_MODE": "kafka",
    "SERVICE_NAME": "${SERVICE_NAME}",
    "SERVICE_SCOPE": "internal",
    "SERVICE_TYPE": "http",
    "SERVICE_IMAGE": "advancedtelematic/ota-device-registry:${DOCKER_TAG}",
    "SERVICE_HEALTH_CHECK": "curl --show-error --silent %<host>s:%<port>s/health"
  },
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/health",
    "intervalSeconds": 30
  }]
}]
